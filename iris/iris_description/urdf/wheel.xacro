<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">  
  <xacro:macro name="iris_wheel" params="xyz_hub rpy_hub side color"> 
    <link name='wheel_${side}_link'>
      <visual>
        <origin xyz="0 0 0" rpy=" 0 0 1.570796"/>
        <geometry>
          <mesh filename="file://$(find iris_description)/meshes/wheel.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="black">
          <color rgba="0.176 0.176 0.176 1"/>
        </material>
      </visual>	 
      
      <collision>
        <origin xyz="0 0 0" rpy="0 1.570796 1.570796"/>
        <geometry>
          <cylinder radius="0.1" length="0.05"/>	  			  
        </geometry>
      </collision>

      <xacro:cylinder_inertial radius="0.15" length="0.02" mass="0.1"/>
    </link>

    <joint name="wheel_${side}_base" type="continuous">
      <origin xyz="${xyz_hub}" rpy="${rpy_hub}"/>
      <parent link="base_link"/>
      <child link="wheel_${side}_link"/>
      <axis xyz="0 1 0"/>    
    </joint> 
  </xacro:macro>
 </robot>
